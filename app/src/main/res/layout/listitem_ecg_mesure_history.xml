<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_bg"
        android:padding="12dp">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health_index"
            android:textColor="#ff288dfe"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_ecg_mesure_index_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_gang"
            android:textColor="#ff288dfe"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/title1"
            app:layout_constraintTop_toTopOf="@+id/title1" />

        <TextView
            android:id="@+id/list_ecg_mesure_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_gang"
            android:textColor="#ff288dfe"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/title1"
            app:layout_constraintTop_toTopOf="@+id/title1" />

        <TextView
            android:id="@+id/list_ecg_mesure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:14:05"
            android:textColor="#ff7f8088"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title1" />

        <View
            android:id="@+id/index"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#E5E5E7"
            app:layout_constraintTop_toBottomOf="@+id/title1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/index">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_ecg_mesure_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_gang"
                    android:textColor="#ff000011"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bpm"
                    android:textColor="#ff000011"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_ecg_mesure_systolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_gang"
                    android:textColor="#ff000011"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#ff000011"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/list_ecg_mesure_diastolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_gang"
                    android:textColor="#ff000011"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mmHg"
                    android:textColor="#ff000011"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
