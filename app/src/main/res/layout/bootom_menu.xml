<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="@dimen/bootom_menu_height"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/data_selected_bg" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/data_selected_bg" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/data_selected_bg" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/data_selected_bg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bootom_menu_lin1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bootom_menu_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/my_bootom_motion_off" />

            <TextView
                android:id="@+id/bootom_menu_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tilte_data"
                android:textColor="@color/bootom_color_off"
                android:textSize="@dimen/bootom_menu_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bootom_menu_lin3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bootom_menu_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/my_bootom_care_off" />

            <TextView
                android:id="@+id/bootom_menu_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_care"
                android:textColor="@color/bootom_color_off"
                android:textSize="@dimen/bootom_menu_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bootom_menu_lin2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bootom_menu_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/my_bootom_week_off" />

            <TextView
                android:id="@+id/bootom_menu_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_title"
                android:textColor="@color/bootom_color_off"
                android:textSize="@dimen/bootom_menu_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bootom_menu_lin4"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bootom_menu_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/my_bootom_my_off" />

            <TextView
                android:id="@+id/bootom_menu_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_mine"
                android:textColor="@color/bootom_color_off"
                android:textSize="@dimen/bootom_menu_text_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
