<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_bg"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/list_new_sport_img_type"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/list_new_sport_text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:text="12-09"
                    android:textColor="#000011"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/list_new_sport_img_type"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/list_new_sport_img_type" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:background="#E5E5E7" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="5"
                        android:gravity="bottom"
                        android:paddingBottom="2dip">

                        <LinearLayout
                            android:id="@+id/list_new_sport_lin_step"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/list_new_sport_text_step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="0000"
                                android:textColor="#000011"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/steps"
                                android:textColor="#000011"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/list_new_sport_lin_kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/list_new_sport_text_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="0000"
                                android:textColor="#000011"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/big_calory"
                                android:textColor="#000011"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/list_new_sport_img_device"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="8dip"
                            android:layout_marginBottom="5dip"
                            android:background="@drawable/icon_new_sport_type_list_device" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_marginTop="4dp"
                        android:layout_weight="4"
                        android:paddingTop="2dip">

                        <LinearLayout
                            android:id="@+id/list_new_sport_lin_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:layout_marginLeft="15dip"
                                android:background="@drawable/icon_new_sport_type_list_duration" />

                            <TextView
                                android:id="@+id/list_new_sport_text_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dip"
                                android:text="00:00:00"
                                android:textColor="#000011"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/list_new_sport_lin_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:layout_marginLeft="15dip"
                                android:background="@drawable/icon_new_sport_type_list_speed" />

                            <TextView
                                android:id="@+id/list_new_sport_text_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dip"
                                android:text="00'00'"
                                android:textColor="#000011"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
