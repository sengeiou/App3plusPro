<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/send_tip"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/about_rect_gray_little"
                android:orientation="vertical"
                android:paddingBottom="12dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="12dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_send_level"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/send_speed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:text="@string/dialog_send_lev2"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/send_speed_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:text="@string/dialog_send_tip1"
                android:textSize="14sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
