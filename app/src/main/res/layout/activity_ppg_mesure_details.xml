<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <include layout="@layout/public_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="32dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginTop="10dip">

                    <com.zjw.apps3pluspro.view.RoundProgressView
                        android:id="@+id/ppgRoundProgressView"
                        android:layout_width="160dip"
                        android:layout_height="160dip"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dip"
                        android:rotation="180" />

                    <LinearLayout
                        android:layout_width="160dip"
                        android:layout_height="160dip"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ppg_details_health_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sleep_gang"
                            android:textColor="#ffffffff"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/ppg_details_health_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:text="@string/sleep_gang"
                            android:textColor="#ffffffff"
                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/icon_proposal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/hrv_help_title2"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dip">

                        <TextView
                            android:id="@+id/health_index_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-26dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/selector_white_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/mesure_history_heart"
                                    style="@style/public_text_measure_number_style"
                                    android:text="@string/sleep_gang"
                                    android:textColor="@color/white" />

                                <TextView
                                    style="@style/public_text_measure_unit_style"
                                    android:layout_marginLeft="2dip"
                                    android:text="@string/bpm"
                                    android:textColor="@color/white" />

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            style="@style/public_text_measure_str_style"
                            android:layout_marginTop="2dip"
                            android:text="@string/heart"
                            android:textColor="@color/white" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/mesure_details_systolic"
                                style="@style/public_text_measure_number_style"
                                android:text="@string/sleep_gang"
                                android:textColor="@color/white" />

                            <TextView
                                style="@style/public_text_measure_number_style"
                                android:text="/"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/mesure_details_diastolic"
                                style="@style/public_text_measure_number_style"
                                android:text="@string/sleep_gang"
                                android:textColor="@color/white" />

                            <TextView
                                style="@style/public_text_measure_unit_style"
                                android:layout_marginLeft="2dip"
                                android:text="@string/mmHg"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <TextView
                            style="@style/public_text_measure_str_style"
                            android:layout_marginTop="2dip"
                            android:text="@string/blood_pressure"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/selector_white_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/quiet_heart"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/heart_hr_tip"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


                <include
                    layout="@layout/public_colorview_ppg_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/selector_white_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_pressure"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/heart_bp_tip"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="12dip"
                        android:layout_height="12dip"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/ppg_details_yuan_sbp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:text="@string/jiaozhun_sbp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dip"
                        android:layout_height="12dip"
                        android:layout_marginLeft="20dip"
                        android:background="@drawable/ppg_details_yuan_dbp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:text="@string/jiaozhun_dbp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/img_ppg_details_bp_chars" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
