<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/my_colorview_left_bg" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/my_color_view_color2" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/my_colorview_right_bg" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_marginLeft="26dip"
                android:layout_marginRight="26dip"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center">

                </LinearLayout>

                <TextView
                    android:id="@+id/public_hrv_index_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:textColor="@color/public_text_color1"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                </LinearLayout>

                <TextView
                    android:id="@+id/public_hrv_index_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textColor="@color/public_text_color1"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:gravity="center_vertical">

                <LinearLayout
                    android:paddingRight="7dp"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="-20dip"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/health_index_sub"
                        android:textColor="@color/public_text_color1"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/health_index_good"
                        android:textColor="@color/public_text_color1"
                        android:textSize="14dp" />


                </LinearLayout>


                <LinearLayout
                    android:paddingLeft="8dip"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/health_index_optimal"
                        android:textColor="@color/public_text_color1"
                        android:textSize="14dp" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
