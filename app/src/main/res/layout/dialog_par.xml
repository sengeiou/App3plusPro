<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_par_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#f3f3f3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_par_cancel"
            style="@style/public_text_dialog_style"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_no" />

        <TextView
            android:id="@+id/tv_par_ok"
            style="@style/public_text_dialog_style"
            android:layout_alignParentRight="true"
            android:text="@string/dialog_yes" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_below="@id/rl_nick_name_title"
        android:layout_marginTop="5dip"
        android:paddingLeft="20dip"
        android:paddingTop="5dip"
        android:paddingRight="20dip"
        android:paddingBottom="5dip">


        <com.zjw.apps3pluspro.view.wheelview.WheelView
            android:id="@+id/wheel"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_centerInParent="true" />


    </RelativeLayout>

</RelativeLayout>