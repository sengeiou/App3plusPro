<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/top_bar_base"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notiface_section_cancel"
            style="@style/public_text_dialog_style"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_no" />

        <TextView
            android:id="@+id/tv_notiface_section_ok"
            style="@style/public_text_dialog_style"
            android:layout_alignParentRight="true"
            android:text="@string/dialog_yes" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.zjw.apps3pluspro.view.picker.PickerOneView
                    android:id="@+id/pv_notiface_section_start_hour"
                    android:layout_width="60dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/white" />

                <com.zjw.apps3pluspro.view.picker.PickerTwoView
                    android:id="@+id/pv_notiface_section_start_min"
                    android:layout_width="60dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.zjw.apps3pluspro.view.picker.PickerThreeView
                    android:id="@+id/pv_notiface_section_end_hour"
                    android:layout_width="60dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/white" />

                <com.zjw.apps3pluspro.view.picker.PickerFourView
                    android:id="@+id/pv_notiface_section_end_min"
                    android:layout_width="60dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
