<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/public_new_calendar_top_lin"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/public_new_calendar_top_text"
            style="@style/public_text_title2_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>


    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="gone"
        app:calendar_content_view_id="@+id/recyclerView"
        app:default_status="shrink">

        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@color/month_calendar_bg"
            app:calendar_height="40dp"
            app:calendar_padding="1dp"
            app:current_day_text_color="#ffffff"
            app:current_month_lunar_text_color="#888888"
            app:current_month_text_color="@color/month_is_now_text_color"
            app:min_year="2004"
            app:month_view="com.zjw.apps3pluspro.view.mycalendar.SimpleMonthView"
            app:other_month_text_color="#e1e1e1"
            app:scheme_text=""
            app:scheme_text_color="@color/all_biaoji_text_color"
            app:scheme_theme_color="#333"
            app:selected_text_color="@color/month_now_text_color"
            app:selected_theme_color="@color/week_now_bg_color"
            app:week_background="@color/month_week_bg"
            app:week_text_color="@color/week_is_now_text_color"
            app:week_view="com.zjw.apps3pluspro.view.mycalendar.SimpleWeekView"
            app:year_view_day_text_color="@color/year_is_now_no_biaoji_month_text_color"
            app:year_view_day_text_size="9sp"
            app:year_view_month_text_color="@color/year_month_text_color"
            app:year_view_month_text_size="20sp"
            app:year_view_scheme_color="@color/year_is_now_is_biaoji_month_text_color" />


        ã€€
    </com.haibin.calendarview.CalendarLayout>


</RelativeLayout>
