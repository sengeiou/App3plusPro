<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <include layout="@layout/public_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_profile_head"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:id="@+id/layoutHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="85dip"
                            android:layout_height="85dip"
                            android:layout_centerInParent="true"
                            android:background="@drawable/public_head_yuan">

                            <com.zjw.apps3pluspro.view.CircleImageView
                                android:id="@+id/ci_mines_head"
                                android:layout_width="75dip"
                                android:layout_height="75dip"
                                android:layout_centerInParent="true"
                                android:src="@drawable/default_header" />

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignStart="@+id/layoutHead"
                        android:layout_marginStart="62dp"
                        android:layout_marginTop="6dp"

                        android:background="@mipmap/edit_head_bg" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_profile_name"
                    style="@style/person_info_1">

                    <TextView
                        android:id="@+id/tv_profile_name"
                        style="@style/person_info_text"
                        android:maxLength="14"
                        android:maxLines="15"
                        android:singleLine="true" />

                </RelativeLayout>

                <include layout="@layout/line_layout" />

                <RelativeLayout
                    android:id="@+id/rl_profile_sex"
                    style="@style/person_info_1">

                    <TextView
                        android:id="@+id/tv_profile_sex"
                        style="@style/person_info_text" />

                </RelativeLayout>

                <include layout="@layout/line_layout" />


                <RelativeLayout
                    android:id="@+id/rl_profile_birthday"
                    style="@style/person_info_1">


                    <TextView
                        android:id="@+id/tv_profile_birthday"
                        style="@style/person_info_text" />


                </RelativeLayout>

                <include layout="@layout/line_layout" />

                <RelativeLayout
                    android:id="@+id/rl_profile_height"
                    style="@style/person_info_1">


                    <TextView
                        android:id="@+id/tv_profile_height"
                        style="@style/person_info_text" />


                </RelativeLayout>


                <include layout="@layout/line_layout" />

                <RelativeLayout
                    android:id="@+id/rl_profile_weight"
                    style="@style/person_info_1">


                    <TextView
                        android:id="@+id/tv_profile_weight"
                        style="@style/person_info_text" />

                </RelativeLayout>


                <include layout="@layout/line_layout" />

                <LinearLayout
                    android:id="@+id/rl_profile_skin_colour"
                    style="@style/person_info_1">


                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/skin_colour_title" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_profile_skin_colour_bg"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:background="@drawable/skin_colour_yuan1"
                            android:padding="5dip" />


                    </LinearLayout>


                </LinearLayout>


                <include layout="@layout/line_layout" />

                <LinearLayout style="@style/person_info_1">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/map_type" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/text_map_google"
                            android:layout_width="75dip"
                            android:layout_height="match_parent"
                            android:background="@drawable/my_unit_left_on"
                            android:gravity="center"
                            android:text="@string/map_google"
                            android:textColor="@color/my_unit_color_off"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/text_map_gaode"
                            android:layout_width="75dip"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/my_unit_right_off"
                            android:gravity="center"
                            android:text="@string/map_gaode"
                            android:textColor="@color/my_unit_color_on"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_profile_bp_jiaozhun"
                    style="@style/person_info_1">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_centerVertical="true"
                        android:text="@string/jiaozhun_title" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_profile_bp_calibration"
                            style="@style/person_info_text" />


                    </LinearLayout>


                </RelativeLayout>

                <include
                    android:id="@+id/view_change_password"
                    layout="@layout/line_layout"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_change_password"
                    style="@style/person_info_1"
                    android:visibility="gone">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_centerVertical="true"
                        android:text="@string/modefy_password" />


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dip"
                android:visibility="gone">

                <TextView
                    style="@style/public_text_company2_style"
                    android:layout_centerVertical="true"
                    android:text="@string/reminder_str" />

                <TextView
                    style="@style/public_text_company2_style"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dip"
                    android:text="@string/user_init_tip_content" />


                <Button
                    android:id="@+id/bt_profile_exit"
                    style="@style/public_button2_style"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dip"
                    android:text="@string/exit"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dip" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
