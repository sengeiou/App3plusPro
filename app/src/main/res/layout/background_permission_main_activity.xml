<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_activity_bg"
    tools:context=".module.device.backgroundpermission.BackgroundPermissionMainActivity">

    <include layout="@layout/public_head" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutPersonInfo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:padding="10dip">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/running_permission_cur_phone"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/layoutPhoneType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right">

                    <TextView
                        android:id="@+id/tvPhoneType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:text="@string/running_permission_xiaomi"
                        android:textColor="#7fffffff"
                        android:textSize="14sp" />

                    <ImageView
                        style="@style/device_fragment_right_image"
                        android:background="@mipmap/icon_enter" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="32dp"
                android:text="@string/running_permission_tip"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:text="@string/running_permission_tip2"
                android:textColor="@color/white_50"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPhoneType2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:text="@string/running_permission_xiaomi"
                    android:textColor="@color/white_50"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:text="@string/running_permission_tip3"
                    android:textColor="@color/white_50"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/white_corner_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutPowerSaving"
                    style="@style/background_permission">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/running_permission_power_saving" />

                    <ImageView
                        android:layout_width="@dimen/my_icon_right_img_size"
                        android:layout_height="@dimen/my_icon_right_img_size"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_enter" />
                </LinearLayout>

                <include
                    android:id="@+id/layoutPowerSavingIndex"
                    layout="@layout/line_layout" />

                <LinearLayout
                    android:id="@+id/layoutPermissionUnlimited"
                    style="@style/background_permission">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/running_permission_unlimited" />

                    <ImageView
                        android:layout_width="@dimen/my_icon_right_img_size"
                        android:layout_height="@dimen/my_icon_right_img_size"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_enter" />
                </LinearLayout>

                <include
                    android:id="@+id/layoutPermissionUnlimitedIndex"
                    layout="@layout/line_layout" />

                <LinearLayout
                    android:id="@+id/layoutBootCompleted"
                    style="@style/background_permission">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/running_permission_boot_completed" />

                    <ImageView
                        android:layout_width="@dimen/my_icon_right_img_size"
                        android:layout_height="@dimen/my_icon_right_img_size"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_enter" />
                </LinearLayout>

                <include
                    android:id="@+id/layoutBootCompletedIndex"
                    layout="@layout/line_layout" />

                <LinearLayout
                    android:id="@+id/layoutLocking"
                    style="@style/background_permission">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/running_permission_locking" />

                    <ImageView
                        android:layout_width="@dimen/my_icon_right_img_size"
                        android:layout_height="@dimen/my_icon_right_img_size"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_enter" />
                </LinearLayout>

                <include
                    android:id="@+id/layoutLockingIndex"
                    layout="@layout/line_layout" />


                <LinearLayout
                    android:id="@+id/layoutPowerManagement"
                    style="@style/background_permission">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/running_permission_power_management" />

                    <ImageView
                        android:layout_width="@dimen/my_icon_right_img_size"
                        android:layout_height="@dimen/my_icon_right_img_size"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_enter" />
                </LinearLayout>

                <include
                    android:id="@+id/layoutPowerManagementIndex"
                    layout="@layout/line_layout" />


                <LinearLayout
                    android:id="@+id/layoutPowerConsumption"
                    style="@style/background_permission">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/running_permission_power_consumption" />

                    <ImageView
                        android:layout_width="@dimen/my_icon_right_img_size"
                        android:layout_height="@dimen/my_icon_right_img_size"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_enter" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/white_corner_bg"
                android:orientation="vertical">

                <LinearLayout style="@style/background_permission">

                    <TextView
                        style="@style/public_text_title2_style"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/running_permission_other_set" />

                    <ImageView
                        android:layout_width="@dimen/my_icon_right_img_size"
                        android:layout_height="@dimen/my_icon_right_img_size"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_enter" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>