<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical">

    <include layout="@layout/public_head" />

    <LinearLayout
        android:id="@+id/layoutStep"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/target_steps"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="@string/sleep_gang"
                    android:textColor="#ff7f8088"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mines_target_step_unit"
                    style="@style/public_text_company2_style"
                    android:text="@string/steps"
                    android:textColor="#ff7f8088"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                style="@style/device_fragment_right_image"
                android:background="@mipmap/icon_enter" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_layout" />

    <LinearLayout
        android:id="@+id/layoutSleep"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/sleep_target"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="@string/no_data_default"
                    android:textColor="#ff7f8088"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mines_target_sleep_hour_unit"
                    style="@style/public_text_company2_style"
                    android:text="@string/hour"
                    android:textColor="#ff7f8088"
                    android:textSize="14sp" />
            </LinearLayout>


            <ImageView
                style="@style/device_fragment_right_image"
                android:background="@mipmap/icon_enter" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
