                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:background="@drawable/my_circle_bg_two_2"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:text="@string/user_par_state2"
                            android:textColor="@color/my_circle_bg_two_2_bg"
                            android:textSize="10sp"
                            android:visibility="gone" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right">

                            <TextView
                                android:id="@+id/tv_friend_info_ecg_time"
                                style="@style/public_text_count2_style"
                                android:text="@string/sleep_gang"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dip"
                        android:paddingBottom="15dip">

                        <LinearLayout
                            android:id="@+id/ll_friend_info_ecg_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/health_index"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_marginLeft="5dip"
                                android:background="@drawable/my_icon_dengpao_black"
                                android:visibility="gone" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="8dip">

                            <TextView
                                android:id="@+id/tv_friend_info_health_number"
                                style="@style/public_text_number1_style"
                                android:text="@string/sleep_gang" />

                            <TextView
                                android:id="@+id/tv_friend_info_health_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_toRightOf="@id/tv_friend_info_health_number"
