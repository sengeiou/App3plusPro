<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_activity_bg"
    android:orientation="vertical"
    tools:context=".module.device.weather.WeatherHelpActivity">

    <include layout="@layout/public_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:gravity="left"
        android:text="@string/weather_help_tip"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="@string/weather_help_1"
        android:textColor="@color/white_50"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvAppSet"
        style="@style/big_button_stytle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="@string/setting_dialog_setting"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvLatLon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="@string/weather_help_2"
        android:textColor="@color/white_50"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvSystemSet"
        style="@style/big_button_stytle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="@string/setting_dialog_setting"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvLatLon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="@string/weather_help_3"
        android:textColor="@color/white_50"
        android:textSize="14sp" />
</LinearLayout>